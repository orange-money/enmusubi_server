<h1>Listing text_infos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Lecture name</th>
      <th>Textbook name</th>
      <th>Price</th>
      <th>Comment</th>
      <th>Image</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @text_infos.each do |text_info| %>
      <tr>
        <td><%= text_info.user_id %></td>
        <td><%= text_info.lecture_name %></td>
        <td><%= text_info.textbook_name %></td>
        <td><%= text_info.price %></td>
        <td><%= text_info.comment %></td>
        <td><%= text_info.image %></td>
        <td><%= text_info.status %></td>
        <td><%= link_to 'Show', text_info %></td>
        <td><%= link_to 'Edit', edit_text_info_path(text_info) %></td>
        <td><%= link_to 'Destroy', text_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Text info', new_text_info_path %>
