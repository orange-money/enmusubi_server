<h1>Listing texts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Lecture name</th>
      <th>Textbook name</th>
      <th>Price</th>
      <th>Comment</th>
      <th>Image</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= text.user_id %></td>
        <td><%= text.lecture_name %></td>
        <td><%= text.textbook_name %></td>
        <td><%= text.price %></td>
        <td><%= text.comment %></td>
        <td><%= text.image %></td>
        <td><%= text.status %></td>
        <td><%= link_to 'Show', text %></td>
        <td><%= link_to 'Edit', edit_text_path(text) %></td>
        <td><%= link_to 'Destroy', text, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br>

<%= form_tag( { controller: :texts, action: :search},
id: :textbook_name, class: :textbook_name) do %>
名前：
<%= text_field_tag :textbook_name, '', size: 30 %>
<%= submit_tag '送信' %>
<br/>
<% end %>

<br><br>

<%=  button_to("履歴じゃん", user_text_info_path, {:method => :get}) %>

<br><br>

<%= link_to 'New Text', new_text_path %>
